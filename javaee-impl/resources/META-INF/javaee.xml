<idea-plugin>
	<extensions defaultExtensionNs="org.consulo.java">
		<testPatcher implementation="com.intellij.gwt.junit.GwtJUnitPatcher"/>
	</extensions>

	<extensions defaultExtensionNs="com.intellij">
		<configurationType implementation="com.intellij.gwt.run.GwtRunConfigurationType"/>
		<compiler implementation="com.intellij.gwt.make.GwtCompiler"/>

		<moduleExtensionProvider key="javaee-google-gwt"
								 parentKey="java-web"
								 name="Google GWT"
								 icon="/icons/gwt.png"
								 immutableClass="org.mustbe.consulo.google.gwt.module.extension.JavaEEGoogleGwtModuleExtension"
								 mutableClass="org.mustbe.consulo.google.gwt.module.extension.JavaEEGoogleGwtMutableModuleExtension" />
	</extensions>
	<!--<javaee.web.customBuildParticipant implementation="com.intellij.gwt.make.GwtWebBuildParticipant"/> -->
	<!--<explodedAndJarBuildGenerator implementation="com.intellij.gwt.ant.GwtExplodedAndJarBuildGenerator"/>-->
	<application-components>
		<component>
			<implementation-class>com.intellij.gwt.GwtApplicationComponent</implementation-class>
		</component>
	</application-components>

	<actions>
		<action id="GWT.NewRemoteService"
				class="com.intellij.gwt.actions.CreateGwtRemoteServiceAction"
				text="GWT Remote service"
				description="Create new GWT interface extending RemoteService, corresponding async version and implementation class">
			<add-to-group group-id="GWT" anchor="last"/>
		</action>
	</actions>
</idea-plugin>